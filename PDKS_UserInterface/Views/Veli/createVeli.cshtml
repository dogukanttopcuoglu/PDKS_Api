@model CreateVeliDto
@{
    ViewData["Title"] = "Yeni Veli Ekleme Sayfası";
    Layout = "~/Views/Admin/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni Veli Ekleme Sayfası</h6>
                <form asp-action="createVeli" asp-controller="Veli" method="post">
                    <div class="form-group">
                        <label>Veli Adı</label>
                        <input type="text" asp-for="ad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Veli Soyadı</label>
                        <input type="text" asp-for="soyad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Veli Telefon Numarası</label>
                        <input type="text" asp-for="telefon_no" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Veli Mail</label>
                        <input type="text" asp-for="mail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Veli Adres</label>
                        <input type="text" asp-for="adres" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Veli Cinsiyet</label>
                        <input type="text" asp-for="cinsiyet" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Veli Doğum Tarihi</label>
                        <input type="date" asp-for="dogum_tarihi" class="form-control" />
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary">Veliyi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>


