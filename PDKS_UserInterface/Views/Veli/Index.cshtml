@model List<ResultVeliDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 1;
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Veli Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                                <th scope="col">Soyad</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Adres</th>
                                <th scope="col">Cinsiyet</th>
                                <th scope="col">Doğum Tarihi</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@item.veli_ad</td>
                                    <td>@item.veli_soyad</td>
                                    <td>@item.veli_telefon_no</td>
                                    <td>@item.veli_mail</td>
                                    <td>@item.veli_adres</td>
                                    <td>@item.veli_cinsiyet</td>
                                    <td>@item.veli_dogum_tarihi</td>
                                    <td><a href="/Veli/DeleteVeli/@item.veli_id" button type="button" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Veli/UpdateVeli/@item.veli_id" button type="button" class="btn btn-success">Güncelle</a></td>

                                </tr>
                                sayac++;
                            }

                        </tbody>
                    </table>
                    <a href="\Veli\createVeli" class="btn btn-outline-info">Yeni Veli Giriş</a>
                </div>
            </div>
        </div>
    </div>
</div>