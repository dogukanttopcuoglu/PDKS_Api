@model List<ResultOgretmenDtos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 1;
}

<div class="container-fluid pt-4 px-4">  
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Öğretmen Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                                <th scope="col">Soyad</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Adres</th>
                                <th scope="col">Cinsiyet</th>
                                <th scope="col">Doğum Tarihi</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@item.ogretmen_ad</td>
                                    <td>@item.ogretmen_soyad</td>
                                    <td>@item.ogretmen_telefon_no</td>
                                    <td>@item.ogretmen_mail</td>
                                    <td>@item.ogretmen_adres</td>
                                    <td>@item.ogretmen_cinsiyet</td>
                                    <td>@item.ogretmen_dogum_tarihi.ToString("dd.MM.yyyy")</td>
                                    <td><a href="/Ogretmen/DeleteOgretmen/@item.ögretmen_id" type="button" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Ogretmen/UpdateOgretmen/@item.ögretmen_id" type="button" class="btn btn-success">Güncelle</a></td>
                                </tr>
                                sayac++;
                            }
                        </tbody>
                    </table>
                    <a href="/Ogretmen/createOgretmen" class="btn btn-outline-info">Yeni Öğretmen Giriş</a>
                </div>
            </div>
        </div>
    </div>
</div>