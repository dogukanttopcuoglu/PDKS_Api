@model CreateOgretmenDtos
@{
    ViewData["Title"] = "createOgretmen";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h1>Yeni Öğretmen Ekleme Sayfası</h1>
<form asp-action="CreateOgretmen" asp-controller="Ogretmen" method="post">
    <div class="form-group">
        <label>Öğretmen Adı</label>
        <input type="text" asp-for="ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Öğretmen Soyadı</label>
        <input type="text" asp-for="soyad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Öğretmen Telefon Numarası</label>
        <input type="text" asp-for="telefon_no" class="form-control" />
    </div>
    <div class="form-group">
        <label>Öğretmen Mail</label>
        <input type="text" asp-for="mail" class="form-control" />
    </div>
    <div class="form-group">
        <label>Öğretmen Adres</label>
        <input type="text" asp-for="adres" class="form-control" />
    </div>
    <div class="form-group">
        <label>Öğretmen Cinsiyet</label>
        <input type="text" asp-for="cinsiyet" class="form-control" />
    </div>
    <div class="form-group">
        <label>Öğretmen Doğum Tarihi</label>
        <input type="date" asp-for="dogum_tarihi" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Öğretmeni Kaydet</button>
</form>

