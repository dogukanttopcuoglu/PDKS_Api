@using PDKS_UserInterface.Dtos.OgrenciDtos
@model List<ResultOgrenciDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int sayac = 1;
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Öğrenci Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ad</th>
                                <th scope="col">Soyad</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Adres</th>
                                <th scope="col">Cinsiyet</th>
                                <th scope="col">Doğum Tarihi</th>
                                <th scope="col">Veli_ID</th>
                                <th scope="col">Sınıf_ID</th>
                                <th scope="col">Öğretmen_ID</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <th scope="row">@sayac</th>
                                    <td>@item.ogrenci_ad</td>
                                    <td>@item.ogrenci_soyad</td>
                                    <td>@item.ogrenci_telefon_no</td>
                                    <td>@item.ogrenci_adres</td>
                                    <td>@item.ogrenci_cinsiyet</td>
                                    <td>@item.ogrenci_dogum_tarihi.ToString("dd.MM.yyyy")</td>
                                    <td>@item.ogrenci_veli_id</td>
                                    <td>@item.ogrenci_sınıf_id</td>
                                    <td>@item.ogrenci_ögretmen_id</td>
                                    <td><a href="/Ogrenci/DeleteOgrenci/@item.ögrenci_id" button type="button" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Ogrenci/UpdateOgrenci/@item.ögrenci_id" button type="button" class="btn btn-success">Güncelle</a></td>

                                </tr>
                                sayac++;
                            }

                        </tbody>
                    </table>
                    <a href="/Ogrenci/CreateOgrenci/" class="btn btn-outline-info">Yeni Öğrenci Giriş</a>
                </div>
            </div>
        </div>
    </div>
</div>